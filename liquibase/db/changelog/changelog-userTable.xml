                </not>
            </and>
        </preConditions>
        <comment>Добавление колонки IDD к USER</comment>
        <addColumn tableName="USER">
            <column name="IDD" type="int">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="USER" columnName="IDD"/>
